{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"jsxRuntime": "reactClassic",
		"formatter": {
			"jsxQuoteStyle": "single",
			"arrowParentheses": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"indentStyle": "space",
			"trailingCommas": "none",
			"bracketSameLine": true
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		},
		"parser": {
			"allowTrailingCommas": true
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "space",
			"quoteStyle": "single"
		},
		"linter": {
			"enabled": true
		}
	}
}
